<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#FFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>


    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="Button">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button2">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="Text.Action">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="Text.Action1" parent="Text.Action">
        <item name="android:textColor">@color/color_ff365b</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Text.Body">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Text.Body1" parent="Text.Body">
        <item name="android:textColor">#152846</item>
    </style>


    <style name="Text.Caption">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.Caption1">
        <item name="android:textColor">#5f5f5f</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.Section">
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Section1" parent="Text.Section">
        <item name="android:textColor">#152846</item>
    </style>


</resources>
